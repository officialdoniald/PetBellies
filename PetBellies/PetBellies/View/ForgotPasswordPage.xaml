<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="PetBellies.View.ForgotPasswordPage" Title="Forgot password">
    <ContentPage.Content>
            <StackLayout Margin="0,15,0,0">
            <Label Text="E-Mail:" Style="{StaticResource EntryAboveLabel}" />
            <Entry x:Name="emailEntry" Style="{StaticResource NormalEnrty}" Completed="Handle_Completed" />
            <Button x:Name="sendNewPassword" Text="Send my new password" Clicked="sendNewPassword_ClickedAsync" Style="{StaticResource NormalButton}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>